<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="StudentPU" transaction-type="RESOURCE_LOCAL">
    <class>com.mycompany.studentmp.entity.Tblcity</class>
    <class>com.mycompany.studentmp.entity.Tblcountry</class>
    <class>com.mycompany.studentmp.entity.Tblstate</class>
    <class>com.mycompany.studentmp.entity.Tblstudent</class>
    <class>com.mycompany.studentmp.entity.Tbluser</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hogwartsdb?useSSL=false"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="toor"/>
    </properties>
  </persistence-unit>
</persistence>
